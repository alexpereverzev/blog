<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h2>Comments</h2>


<% @post.comments.each do |comment| %>
<div id='<%= comment.id%>'>
	<h4><p>Send <%= get_user(comment) %>
	<%img= get_user_image(comment)%>
	<%=image_tag img, size: '25' %></p></h4>
	<h3><p><%= comment.text %></p></h3>

		
<%= link_to 'Delete comment',[@post, comment], :method => :delete, :confirm => " Are you sure", :remote => true%>
</div>
		<% end %>
<%= form_for [@post,@post.comments.build] do |f| %>

<%= f.text_area :text , :size => '40x10' %>
<p><%= f.submit "Post Comment" %></p>
	<%end%>
<p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Delete',@post, :method => :delete%>
</p>